<!DOCTYPE html>
<html lang="en">
	<%- include('./parts/homehead.ejs')%>
<body>
	<h2>Hii <%= user.name%></h1>
	<div class="row">
		<div class="col-md-3">
			<ul class="list-group">
				<% for (let user of users) { %>
				<li class="list-group-item  list-group-item-dark cursor-pointer user-list ">
					<%= user.serviceName %> 
				</li>
				<% } %>
			</ul>
		</div>
		<div class="col-md-9">
			<h2 class="start-head">click to start the chat</h2>
			<div class="chat-section">
				<div id="chat-container">
					<div class="current-user-chat">
						<h5>hi</h5>
					</div>
					<div class="distance-user-chat">
						<h5>hi</h5>
					</div>
				</div>
				<form action="" method="post" id="chat-form">
					<input type="text" name="message" class="border" placeholder="Enter message" id="message" required>
					<input type="submit" value="Send message" class="btn btn-primary">
				</form>

			</div>

		</div>
	
</div>
<style type="text/css">
	.chat-section{
		display: none;
	}
</style>
	<!-- JS here -->
    <script src="js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="js/vendor/jquery-1.12.4.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/isotope.pkgd.min.js"></script>
    <script src="js/ajax-form.js"></script>
    <script src="js/waypoints.min.js"></script>
    <script src="js/jquery.counterup.min.js"></script>
    <script src="js/imagesloaded.pkgd.min.js"></script>
    <script src="js/scrollIt.js"></script>
    <script src="js/jquery.scrollUp.min.js"></script>
    <script src="js/wow.min.js"></script>
    <script src="js/nice-select.min.js"></script>
    <script src="js/jquery.slicknav.min.js"></script>
    <script src="js/jquery.magnific-popup.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/gijgo.min.js"></script>
<script>
		$(document).ready(function(){
			$('.cursor-pointer ').click(function(){
				$('.chat-section').show();
});
	});
</script>

</body>
</html>

